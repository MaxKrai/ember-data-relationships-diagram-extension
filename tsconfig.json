  "compilerOptions": {
    "sourceMap": true,
    "module": "commonjs",
    "target": "es5",
		"jsx": "react-jsx",
    "jsxImportSource": "preact",

    "allowSyntheticDefaultImports": true,    // that is probably the important one
    "esModuleInterop": true
  },
  "include": [
    "./src/**/*.tsx",
    "./src/**/*.ts"
  ]
}